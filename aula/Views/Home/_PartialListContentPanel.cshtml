@model IEnumerable<Modelo.Cadastros.Produto>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Imagem
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-thumbnail" src="@Url.Action("GetLogotipo", "Produtos", new { id = item.ProdutoId })" style="display:block; margin-left:auto; margin-right:auto; width:100px">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>

